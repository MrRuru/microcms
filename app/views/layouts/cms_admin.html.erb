      <%= yield %>
		</div>

    <div class="row">
  		<div class="five columns alpha" id="content_list">
          <%= yield :content_list %>        
      </div>

  		<div class="eleven columns omega" id="content_edition">
          <%= yield :content_edition %>
  		</div>
  	</div>

	</div><!-- container -->


