	<div class="container">
		<div class="sixteen columns">
			<h1 class="remove-bottom" style="margin-top: 40px">uCMS</h1>
      <hr/>
      <div id="menu">
        <%= render :partial => "cms_admin/cms_pages/menu" %>
      </div>
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
