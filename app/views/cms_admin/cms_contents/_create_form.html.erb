<% page_id ||= nil %>

<div class="content_form hidden" id="new_<%= content.class_name %>">
  <h2>New content for this page</h2>

  <%= form_for "content", :url => (page_id ? cms_admin_cms_page_cms_contents_path(:cms_page_id => page_id) : cms_admin_cms_contents_path), :html => {:multipart => true} do |f| %>

    <%= hidden_field_tag "type", content.class.name %>
    <p>
      Name : 
      <%= f.text_field :name %>
    </p>
    <%= render :partial => "cms_admin/cms_contents/#{content.class_name}/fields", :locals => { :f => f } %>
    <%= f.submit "Create" %>

  <% end%>
</div>

