<% page_id ||= nil %>
<div class="content <%= 'other_page' if page_id != cms_content.page_id %>">
  <h5><%= cms_content.name %></h5>
  
  <% cms_content.contents.each_pair do |locale, translation| %>
    <p>[<%=locale%>] <%= truncate (strip_tags translation) %></p>
  <% end %>
  
  <%= link_to "Edit", "#", :class => "edit_content_link button", :content_id => cms_content.id %>
  <%= link_to "Delete", [:cms_admin, cms_content], :class => "button", :method => :delete, :confirm => "Are you sure you want to delete this content?" %>

  <%= render :partial => 'cms_admin/cms_contents/fields', :locals => {:cms_content => cms_content} %>
</div>
